<div class="modal-content-login animate">
<h1 class="page-header" align="center">Login Account</h1>
  {{#if success_msg}}
  <div class="alert alert-success">
    {{success_msg}}
  </div>
  {{/if}}

  {{#if error_msg}}
  <div class="alert alert-danger">
    {{error_msg}}
  </div>
  {{/if}}

  {{#if error}}
  <div class="alert alert-danger">
    {{error}}
  </div>
  {{/if}}
  <div class="modal-body">
    <h4 align="center">Login using Social Media</h4>
    <div align="center">
    <a href="/users/login/facebook" class="fa fa-facebook-square fa-5x"></a>&nbsp;&nbsp;&nbsp;
    <a href="/users/login/twitter" class="fa fa-twitter-square  fa-5x" ></a>&nbsp;&nbsp;&nbsp;
    <a href="/users/login/google"  class="fa fa-google-plus-official fa-5x"></a>
    </div>
      <h3  align="center">Or</h3>

   
  <form method="post" action="/users/login">
    <div class="form-group">
      <label>Username</label>
      <input type="text" class="form-control" name="username" placeholder="user name"/>
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password" placeholder="password"/>
    </div>
    <div class="form-group" align="center">
      <a href="/users/forgotPassword">Forgot Password</a>
    </div>
    <div align="center">
    <button type="submit" class="btn btn-default" align="center">Submit</button>
    </div>
  </form>
</div>
</div>